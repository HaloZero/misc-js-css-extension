{
  "name": "Misc stuff",
  "manifest_version" : 2,
  "version": "1.1.0",
  "options_page": "options/options.html",
  "description": "A series of misc small fixes, that require JS and CSS, in the extension store for syncing purposes",
  "page_action": {
    "default_icon": "misc_icon_16.png"
  },
  "icons": {
    "16" : "misc_icon_16.png",
    "48" : "misc_icon_48.png",
    "128" : "misc_icon_128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
  {
    "matches" : ["*://www.facebook.com/*"],
    "js" : ["utils/jquery.js", "facebook/facebook.js"],
    "css" : ["facebook/facebook.css"]
  },
  {
    "matches" : ["*://*.runkeeper.com/*", "*://*.instapaper.com/*"],
    "js" : ["utils/jquery.js", "runkeeper/runkeeper.js"],
    "css" : []
  },
  {
    "matches" : ["*://*.instapaper.com/*"],
    "js" : ["utils/jquery.js", "instapaper/instapaper.js"],
    "css" : []
  },
  {
    "matches" : ["*://*.okcupid.com/*"],
    "js" : ["utils/jquery.js"],
    "css" : ["okcupid/okcupid.css"]
  },
  {
    "matches" : ["*://*.thisamericanlife.org/*", "*://*.gimletmedia.com/*", 
      "*://*.stuffyoushouldknow.com/*", "*://*.99percentinvisible.org/*", 
      "*://*.thisiscriminal.com/*", "*://*.loveandradio.org/*", 
      "*://*.radiolab.org/*"],
    "js" : ["utils/jquery.js", "podcasts/podcast.js"],
    "css" : []
  }
  ],
  "web_accessible_resources": [
    "images/*.png"
  ]
}
